@page
@model FormDataValidation.Pages.Forms.CreateModel
@{
    ViewData["Title"] = "Create";
}

<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-md-4 col-md-offset-4">
                            <h1>Form Validation</h1>
                        </div>
                    </header>


                    <div class="panel-body">
                        <div class="row">

                            <div class="col-md-4 col-md-offset-1">
                                <div class="form-group">
                                    <form method="post">

                                        <input asp:TextBox runat="server" Enable="true" CssClass="form-control input-sm" asp-for="Person.Name" placeholder="Name" />
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-4 col-md-offset-1">
                                <div class="form-group">
                                    <form method="post">

                                        <input asp:TextBox runat="server" Enable="true" CssClass="form-control input-sm" asp-for="Person.Address" placeholder="Address" />
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-4 col-md-offset-1">
                                <div class="form-group">
                                    <form method="post">

                                        <input asp:TextBox runat="server" Enable="true" TextMode="Date" CssClass="form-control input-sm" asp-for="Person.DOB" placeholder="Date of Birth" />
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-4 col-md-offset-1">
                                <div class="form-group">
                                    <form method="post">

                                        <input asp:TextBox runat="server" Enable="true" CssClass="form-control input-sm" asp-for="Person.Age" placeholder="Age" />
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-4 col-md-offset-1">
                                <div class="form-group">
                                    <form method="post">

                                        <input asp:TextBox runat="server" Enable="true" CssClass="form-control input-sm" asp-for="Person.Gender" placeholder="Gender" />
                                        <asp:RadioButtonList runat="server">
                                            <asp:ListItem Text="Male" />
                                            <asp:ListItem Text="Female" />
                                        </asp:RadioButtonList>
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-4 col-md-offset-1">
                                <div class="form-group">
                                    <form method="post">

                                        <input asp:TextBox runat="server" Enable="true" CssClass="form-control input-sm" asp-for="Person.Contact" placeholder="Contact#" />
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-4 col-md-offset-1">
                                <div class="form-group">
                                    <form method="post">

                                        <input asp:TextBox runat="server" Enable="true" CssClass="form-control input-sm" asp-for="Person.School" placeholder="SchoolName" />
                                    </form>
                                </div>
                            </div>


                        </div>
                        <div class="row">

                            <div class="col-md-4 col-md-offset-1">
                                <div asp-validation-summary="All" style="color:red"></div>
                                <button type="submit" CssClass="btn btn-primary" Width="170px" runat="server">Submit</button>
                            </div>
                        </div>
                         
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>




